#!/bin/sh

regex='((https?|ftp)(:\/\/)([a-zA-Z0-9]+(\-[a-zA-Z0-9]+)*\.)+[a-zA-Z0-9]+)[a-zA-Z0-9.\/$&%?#=_~\-]*[^ .,!?;\t>"():]'
url=$(grep -aPo "$regex" | dmenu -i -h 25 -l 7 -nb "#4C566A" -nbh "#4C566A" -p "open url:" -w "$WINDOWID") || exit
echo "$url" | while IFS= read -r line ; do
    $BROWSER "$line"
done
